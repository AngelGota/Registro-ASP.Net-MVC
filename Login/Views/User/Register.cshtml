@model UserModel

@{
    ViewData["Title"] = "Registro de usuario";
}
<div class="container">
    <div class="row justify-content-center align-items-center vh-100 py-5">
        <div class="col-sm-10 col-md-8 col-lg-7 col-xl-6 col-xxl-5">
            <div class="card card-body rounded-3 p-4 p-sm-5 shadow">
                <div class="text-center">
                    <h1 class="mb-2">Registro</h1>
                    <small class="d-block">¿Ya eres usuario? <a asp-area="" asp-controller="Home" asp-action="Index">Inicia sesión</a></small>
                    <br/>
                </div>
                <form method="post" class="form-floating">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control rounded-3" id="floatingInput" placeholder="Nombre">
                        <label for="floatingInput" asp-for="Name"></label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Age" class="form-control rounded-3" id="floatingInput" placeholder="Edad">
                        <label for="floatingInput" asp-for="Age"></label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Mail" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
                        <label for="floatingInput" asp-for="Mail"></label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="password" asp-for="Password" class="form-control rounded-3" id="floatingInput" placeholder="Mypassword.123">
                        <label for="floatingInput" asp-for="Password"></label>
                    </div>
                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Registrarse</button>
                </form>
            </div>
        </div>
    </div>
</div>
